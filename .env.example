# ============================================================================
# Alfred AI Personal Governance System - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to version control!
# ============================================================================

# ============================================================================
# REQUIRED - Core API Keys
# ============================================================================

# Anthropic API Key (REQUIRED - primary LLM provider)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxx

# OpenAI API Key (Optional - for embeddings/whisper)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ============================================================================
# GOOGLE INTEGRATION - Calendar, Gmail, Drive
# ============================================================================
# Set up OAuth credentials in Google Cloud Console:
# https://console.cloud.google.com/apis/credentials

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:50001/oauth/callback
GOOGLE_REFRESH_TOKEN=

# ============================================================================
# ADDITIONAL API KEYS
# ============================================================================

# Perplexity API (for research/search capabilities)
# https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=

# NCBI/PubMed (for medical/scientific research)
# https://www.ncbi.nlm.nih.gov/account/settings/
NCBI_API_KEY=
NCBI_EMAIL=

# ============================================================================
# WHATSAPP INTEGRATION (Business API)
# ============================================================================
# Set up in Meta Developer Console:
# https://developers.facebook.com/apps/

WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=

# ============================================================================
# MESSAGING GATEWAY - Bot Tokens
# ============================================================================

# Telegram Bot (create via @BotFather)
TELEGRAM_BOT_TOKEN=
TELEGRAM_OWNER_ID=

# Discord Bot (create in Discord Developer Portal)
DISCORD_BOT_TOKEN=
DISCORD_OWNER_ID=

# Signal (phone number for signal-cli)
SIGNAL_PHONE_NUMBER=

# ============================================================================
# VECTOR DATABASE - Qdrant
# ============================================================================

# Qdrant connection (docker service uses http://qdrant:6333)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_LOG_LEVEL=INFO

# ============================================================================
# SECURITY & ENCRYPTION
# ============================================================================

# Memory encryption key (generate with: openssl rand -hex 32)
MEMORY_ENCRYPTION_KEY=

# Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Alfred port (default: 50001)
ALFRED_PORT=50001

# Timezone (default: UTC)
TZ=UTC

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Agent profile to use
AGENT_PROFILE=alfred

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable debug mode (set to 1 for development)
# DEBUG=0

# Enable MCP servers
# MCP_ENABLED=true
